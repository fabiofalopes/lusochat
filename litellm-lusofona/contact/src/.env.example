# LiteLLM Bulk Email Sender Configuration
# Copy this to .env and customize for your setup

# Gmail Authentication
CLIENT_SECRETS_PATH=../credentials/client_secret_YOUR_CLIENT_ID.apps.googleusercontent.com.json
TOKEN_PATH=../credentials/token.json

# Email Content
CSV_PATH=../files/your_users.csv
RESULTS_CSV_PATH=../files/your_results.csv
TO_FIELD=user_email
# Keep the subject generic so it doesn't depend on CSV placeholders like {teams}
SUBJECT=Your access to modelos.ai.ulusofona.pt
BODY_FILE=../templates/welcome_with_credentials.txt

# Email Settings
SENDER=f6388@ulusofona.pt

# Sending Options
DRY_RUN=true
DEDUPE=true
SLEEP_BETWEEN_SENDS=0.5
LOG_PATH=../logs/bulk_email_log.csv
